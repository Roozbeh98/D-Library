@{
    if (ViewBag.TosterState != null)
    {
        <script src="~/Scripts/MyScripts/Toster_Config.js"></script>
        switch ((TosterType)ViewBag.TosterType)
        {
            case TosterType.JustTitel:
                <script>
                           TosterJustTitel("@ViewBag.TosterState","@ViewBag.TosterTitel");
                </script>
                break;
            case TosterType.WithTitel:
                <script>
                            TosterWithTitel("@ViewBag.TosterState","@ViewBag.TosterMassage","@ViewBag.TosterTitel");
                </script>
                break;
            case TosterType.Maseage:
                <script>
                            TosterWithOutTitel("@ViewBag.TosterState","@ViewBag.TosterMassage");
                </script>
                break;
            default:
                break;
        }
    }
}




