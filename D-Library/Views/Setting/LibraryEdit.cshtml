@model D_Library.Models.Domins.Tbl_Library


@using (Html.BeginForm("LibraryEdit", "Setting", FormMethod.Post, htmlAttributes: new { @class = "", @style = "" }))
{

    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Library_ID)
    <div class="modal-main">
        <div class="form-group">
            <label>نام کتابخانه</label>
            <div class="input-group">
                <span class=" input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                @Html.EditorFor(model => model.Library_Name, new { htmlAttributes = new { @class = "form-control  text-center" } })
            </div>
            @Html.ValidationMessageFor(model => model.Library_Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <button class="btn btn-success modal-btn-singel" type="submit" name="btn-BuildCode">تایید</button>

}