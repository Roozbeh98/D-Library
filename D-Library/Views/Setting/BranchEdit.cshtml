@model D_Library.Models.Model.BranchAddModel
@using D_Library.Models.Repository



<link href="~/Content/Plugins/Chosen/chosen.css" rel="stylesheet" />
<script src="~/Scripts/Plugins/jQuery.Chosen/chosen.jquery.js"></script>
<script src="~/Scripts/MyScripts/Chosen_Config.js"></script>



@using (Html.BeginForm("BranchEdit", "Setting", FormMethod.Post, htmlAttributes: new { @class = "", @style = "" }))
{

    @Html.AntiForgeryToken()

    <div class="modal-main">

        @Html.HiddenFor(model => model.ID)
        <div class="form-group ">
            @Html.LabelFor(model => Model.Group_ID, htmlAttributes: new { @class = "" })
            @{
                Rep_GroupBranch gp = new Rep_GroupBranch();
                @Html.DropDownListFor(model => Model.Group_ID, gp.Get_AllGroupSelectList(), htmlAttributes: new { @class = "form-control chosen-select  text-center" });
            }
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            <div class="input-group">
                <span class=" input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control text-center" } })
            </div>
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>


    </div>

    <button class="btn btn-success modal-btn-singel" type="submit" name="btn-BuildCode">تایید</button>

}

