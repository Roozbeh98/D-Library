@model D_Library.Models.Model.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<section class="">

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { @class = "panel-info  form-form form-login form-form-outdasdboard", @style = "" }))
    {
        @Html.AntiForgeryToken()
        <div class=" form-heading  text-center">
            ورود به سامانه
        </div>

        <div class="panel-body">
            <img src="../../Content/Images/arm.png" alt="Logo" class="login-logo">
            <div class="text-center ">

                <i class="glyphicon glyphicon-info-sign"></i>
                <span style="font-size:medium;">در صورت نداشتن نام کاربری و رمز عبور به کتابخانه مراجعه فرمایید </span>
                <br />
                @if (ViewBag.Message != null)
                {
                    <i class="glyphicon glyphicon-info-sign" style="color:#e23d3d"></i>
                    <span style="font-size:medium; ">@ViewBag.Message </span>

                }
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label " })
                <div class="input-group">
                    <span class=" input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control text-center" } })

                </div>

                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", @type = "password" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label " })
                <div class="input-group">
                    <span class=" input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control text-center" } })

                </div>

                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.RemenberMe)
                <label>مرا به خاطر بسپار</label>
            </div>



        </div>

        <div class="panel-footer form-footer" style="padding-top:0px;">


            <button class="btn btn-success btn-block  login-button" type="submit" name="btnAccept">تایید</button>

        </div>
    }


</section>

